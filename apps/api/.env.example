# Server
PORT=3000
NODE_ENV=development

# Turso Database
DATABASE_URL=libsql://your-database.turso.io?tls=0
AUTH_TOKEN=your-auth-token

# Redis (for GroupMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Dagger
_EXPERIMENTAL_DAGGER_RUNNER_HOST=docker-container://dagger-engine-v0.18.19?experimental_skip_checksums=true
_EXPERIMENTAL_DAGGER_TRACE_LOGS=1
DAGGER_CLOUD_TOKEN=optional-for-cloud-caching
DAGGER_LOG_LEVEL=debug
DAGGER_CLOUD_ORG=mt0

# GitHub
GITHUB_TOKEN=ghp_your_token_here
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# Polkadot
SUBSTRATE_NODE_URL=ws://localhost:9944
